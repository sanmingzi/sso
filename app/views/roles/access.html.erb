<h1>Authorize role (ID = <%= @role.id %>, Name = <%= @role.name %>)</h1>

<div id="form_role">  
  <%= form_with(url: authorize_role_path(@role)) do |f| %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <th>
            <input type="checkbox" class="select-all checkbox" name="select-all" />
          </th>
          <th scope="col">ID</th>
          <th scope="col">Resource</th>
          <th scope="col">Action</th>
        <thead>

        <tbody>
          <% @permissions.each do |permission| %>
          <tr>
            <td>
              <label style="margin: 0;">
                <%= f.check_box :permission_ids, {multiple: true, checked: @active_ids.include?(permission.id), class: 'select-item'}, permission.id, nil %>
              </label>
            </td>
            <td><%= permission.id %></td>
            <td><%= permission.resource.name %></td>
            <td><%= permission.action.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>

<script>
  $(function() {
    $('input.select-all').click(function() {
      var checked = this.checked;
      $('input.select-item').each(function (index, item) {
        item.checked = checked;
      });
    });
  });
</script>
