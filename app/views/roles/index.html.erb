<div id='form_role' class="mt-1">
  <%= render "form", role: @role if policy(Role).create? %>
</div>

<div class="table-responsive">
  <table class="table table-dark table-hover table-striped mt-1 mb-1 btn-table">
    <caption>List of roles</caption>
    <thead class="thead-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Role name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody id="roles">
      <%= render @roles %>
    </tbody>
  </table>
</div>
