<%= form_with(model: user) do |f| %>
  <%= form_group_for(f, :username)%>
  <%= form_group_for(f, :email) %>

  <%= form_group_for(f, :password) do %>
  <%= f.password_field :password, value: user.password, class: "form-control #{'is-invalid' if user.errors[:password].present?}" %>
  <% end %>

  <%= form_group_for(f, :password_confirmation) do %>
  <%= f.password_field :password_confirmation, value: user.password_confirmation, class: "form-control #{'is-invalid' if user.errors[:password_confirmation].present?}" %>
  <% end %>
  <%= f.submit :Submit, class: 'btn btn-primary' %>
<% end %>
