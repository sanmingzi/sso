<h1>Authorize user (ID = <%= @user.id %>, Name = <%= @user.username %>)</h1>

<div id="form_user">
  <%= form_with(url: authorize_user_path(@user)) do |f| %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <th>
            <input type="checkbox" class="select-all checkbox" name="select-all" />
          </th>
          <th scope="col">Role ID</th>
          <th scope="col">Role Name</th>
        <thead>

        <tbody>
          <% @roles.each do |role| %>
          <tr>
            <td>
              <label style="margin: 0;">
              <%= f.check_box :role_ids, {multiple: true, checked: @active_role_ids.include?(role.id), class: 'select-item'}, role.id, nil %>
              </label>
            </td>
            <td><%= role.id %></td>
            <td><%= link_to role.name, access_role_path(role) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  <% end %>
</div>

<script>
  $(function() {
    $('input.select-all').click(function() {
      var checked = this.checked;
      $('input.select-item').each(function (index, item) {
        item.checked = checked;
      });
    });
  });
</script>
